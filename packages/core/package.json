{
  "name": "@composable-svelte/core",
  "version": "0.1.0",
  "description": "A Composable Architecture for Svelte 5",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "svelte": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && tsc --project tsconfig.json --declaration --emitDeclarationOnly --outDir dist",
    "typecheck": "tsc --noEmit --project tsconfig.test.json",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "svelte",
    "svelte5",
    "state-management",
    "composable-architecture",
    "tca",
    "reducer",
    "effects"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@testing-library/svelte": "^5.2.1",
    "@vitest/ui": "^2.0.5",
    "svelte": "^5.0.0",
    "typescript": "^5.5.4",
    "vite": "^5.4.2",
    "vitest": "^2.0.5"
  }
}
