{
  "name": "@composable-svelte/graphics",
  "version": "0.1.0",
  "description": "State-driven WebGL/WebGPU graphics package for Composable Svelte",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc --emitDeclarationOnly",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "check": "svelte-check --tsconfig ./tsconfig.json"
