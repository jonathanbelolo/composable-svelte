{
  "name": "@composable-svelte/charts",
  "version": "0.1.0",
  "description": "Interactive data visualization components for Composable Svelte - Built with Observable Plot and D3",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "svelte": "./dist/*.js",
      "default": "./dist/*.js"
    }
  },
  "svelte": "./dist/index.js",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "svelte-package -o dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:visual": "playwright test",
    "test:visual:update": "playwright test --update-snapshots",
    "test:visual:ui": "playwright test --ui",
    "prepublishOnly": "pnpm run build && pnpm run typecheck && SILENT_TESTS=true pnpm test",
    "prepack": "pnpm run build"
  },
  "keywords": [
    "svelte",
    "svelte5",
    "data-visualization",
    "charts",
    "interactive-charts",
    "observable-plot",
    "d3",
    "scatter-plot",
    "line-chart",
    "bar-chart",
    "composable-architecture",
    "typescript"
  ],
  "author": "Jonathan Belolo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jbelolo/composable-svelte.git",
    "directory": "packages/charts"
  },
  "homepage": "https://github.com/jbelolo/composable-svelte#readme",
  "bugs": {
    "url": "https://github.com/jbelolo/composable-svelte/issues"
  },
  "peerDependencies": {
    "@composable-svelte/core": "^0.4.0",
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@sveltejs/package": "^2.5.4",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@types/d3-array": "^3.2.0",
    "@types/d3-brush": "^3.0.0",
    "@types/d3-scale": "^4.0.0",
    "@types/d3-selection": "^3.0.0",
    "@types/d3-shape": "^3.1.0",
    "@types/d3-zoom": "^3.0.0",
    "@types/node": "^20.0.0",
    "@vitest/browser-playwright": "^4.0.3",
    "@vitest/coverage-v8": "^4.0.7",
    "@vitest/ui": "^4.0.7",
    "playwright": "^1.56.1",
    "svelte": "^5.0.0",
    "typescript": "^5.5.4",
    "vite": "^6.4.1",
    "vitest": "^4.0.7"
  },
  "dependencies": {
    "@composable-svelte/core": "workspace:*",
    "@observablehq/plot": "^0.6.0",
    "d3-array": "^3.2.0",
    "d3-brush": "^3.0.0",
    "d3-scale": "^4.0.0",
    "d3-selection": "^3.0.0",
    "d3-shape": "^3.2.0",
    "d3-zoom": "^3.0.0",
    "motion": "^12.23.24"
  }
}
